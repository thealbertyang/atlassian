{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach (Current Window)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "outFiles": ["${workspaceFolder}/out/**/*.js"]
    },
    {
      "name": "Run Extension (HMR)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "preLaunchTask": "ensure-compiled",
      "env": {}
    }
  ]
}
